<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.LoginActivity">

    <data>

        <variable
            name="viewModel"
            type="com.example.memebase.viewModels.LoginActivityViewModel" />

    </data>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    >
    <LinearLayout
        android:translationX="-1000dp"
        android:id="@+id/ll_register"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_userId"
            android:padding="@dimen/_4sdp"
            android:afterTextChanged="@{(edtitable)->viewModel.afterUserIdUpChange(edtitable)}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="@string/userId"
            android:textColorHint="@color/white"
            android:background="@android:color/darker_gray"/>

         <include layout="@layout/white_border"/>

        <EditText
            android:id="@+id/et_userPassword"
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:afterTextChanged="@{(edtitable)->viewModel.afterUserPasswordUpChange(edtitable)}"
            android:hint="@string/userPassword"
            android:textColorHint="@color/white"
            android:background="@android:color/darker_gray"/>

        <include layout="@layout/white_border"/>

        <EditText
            android:id="@+id/et_userName"
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="@string/userName"
            android:afterTextChanged="@{(edtitable)->viewModel.afterUserNameChange(edtitable)}"
            android:textColorHint="@color/white"
            android:background="@android:color/darker_gray"/>

        <include layout="@layout/white_border"/>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_signIn"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:visibility="invisible"
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="@string/userId"
            android:textColorHint="@color/white"
            android:background="@android:color/darker_gray"/>

        <include layout="@layout/white_border"/>

        <EditText
            android:id="@+id/et_userIdSign"
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:afterTextChanged="@{(edtitable)->viewModel.afterUserIdChange(edtitable)}"
            android:hint="@string/userId"
            android:textColorHint="@color/white"
            android:background="@android:color/darker_gray"/>

        <include layout="@layout/white_border"/>

        <EditText
            android:afterTextChanged="@{(edtitable)->viewModel.afterPasswordChange(edtitable)}"
            android:id="@+id/et_userPasswordSign"
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="@string/userPassword"
            android:textColorHint="@color/white"
            android:background="@android:color/darker_gray"/>

        <include layout="@layout/white_border"/>




    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@+id/ll_register"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@android:color/darker_gray"
        android:onClick="@{()->viewModel.checkRegister()}"
        android:text="@string/submit"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/tv_regSign"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        android:onClick="@{()->viewModel.onRegLogClick()}"
        android:layout_marginTop="@dimen/_20sdp"

        android:gravity="center"
        android:text="@string/signUp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>
</layout>